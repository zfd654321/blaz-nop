<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

        <bean name="/permissionService" class="org.springframework.remoting.caucho.HessianServiceExporter">
                <property name="serviceInterface" value="com.bl.nop.cis.api.PermissionService" />
                <property name="service" ref="permissionService"></property>
        </bean>

        <bean name="/sysUserService" class="org.springframework.remoting.caucho.HessianServiceExporter">
                <property name="serviceInterface" value="com.bl.nop.cis.api.SysUserService" />
                <property name="service" ref="sysUserService"></property>
        </bean>
        <bean name="/sysRoleService" class="org.springframework.remoting.caucho.HessianServiceExporter">
                <property name="serviceInterface" value="com.bl.nop.cis.api.SysRoleService" />
                <property name="service" ref="sysRoleService"></property>
        </bean>

        <bean name="/devicePcService" class="org.springframework.remoting.caucho.HessianServiceExporter">
                <property name="serviceInterface" value="com.bl.nop.cis.api.DevicePcService" />
                <property name="service" ref="devicePcService"></property>
        </bean>
        <bean name="/deviceService" class="org.springframework.remoting.caucho.HessianServiceExporter">
                <property name="serviceInterface" value="com.bl.nop.cis.api.DeviceService" />
                <property name="service" ref="deviceService"></property>
        </bean>

        <bean name="/resourcesService" class="org.springframework.remoting.caucho.HessianServiceExporter">
                <property name="serviceInterface" value="com.bl.nop.cis.api.ResourcesService" />
                <property name="service" ref="resourcesService"></property>
        </bean>
        <bean name="/gameService" class="org.springframework.remoting.caucho.HessianServiceExporter">
                <property name="serviceInterface" value="com.bl.nop.cis.api.GameService" />
                <property name="service" ref="gameService"></property>
        </bean>


</beans>