<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

        <bean name="/permissionService" class="org.springframework.remoting.caucho.HessianServiceExporter">
                <property name="serviceInterface" value="com.bl.nop.cis.api.PermissionService" />
                <property name="service" ref="permissionService"></property>
        </bean>
        <bean name="/userService" class="org.springframework.remoting.caucho.HessianServiceExporter">
                <property name="serviceInterface" value="com.bl.nop.cis.api.SysUserService" />
                <property name="service" ref="userService"></property>
        </bean>
        <bean name="/roleService" class="org.springframework.remoting.caucho.HessianServiceExporter">
                <property name="serviceInterface" value="com.bl.nop.cis.api.SysRoleService" />
                <property name="service" ref="roleService"></property>
        </bean>


</beans>